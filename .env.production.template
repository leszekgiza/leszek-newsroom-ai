# ===========================================
# Newsroom AI - Production Environment
# Copy to .env.production and fill in values
# ===========================================

# Database (used by docker-compose.prod.yml)
DB_USER=newsroom
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_NAME=newsroom_db

# JWT Secret (generate: openssl rand -base64 32)
JWT_SECRET=CHANGE_ME

# AI Provider (BYO key)
ANTHROPIC_API_KEY=sk-ant-your-key-here
LLM_PROVIDER=anthropic
LLM_MODEL=claude-sonnet-4-20250514

# TTS
TTS_PROVIDER=edge-tts

# Cron Secret (generate: openssl rand -hex 32)
CRON_SECRET=CHANGE_ME

# App URL (used for NextAuth, CORS, etc.)
NEXTAUTH_URL=https://news.innocy.ai

# Credentials Encryption (generate: openssl rand -hex 32)
CREDENTIALS_ENCRYPTION_KEY=CHANGE_ME

# Web Push / VAPID Keys (generate: npx web-push generate-vapid-keys)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_CONTACT_EMAIL=mailto:your@email.com

# Gmail OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=https://news.innocy.ai/api/auth/google/callback
